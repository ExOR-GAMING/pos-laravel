{
    "openapi": "3.0.3",
    "info": {
        "title": "Auth API",
        "version": "1.0"
    },
    "servers": [{ "url": "https://localhost:8000/api/v1" }],
    "paths": {
        "/user": {
            "get": {
                "description": "Get current user",
                "responses": {
                    "200": {
                        "description": "Returns the current authenticated user's data",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "type": "number"
                                                },
                                                "fullName": {
                                                    "type": "string"
                                                },
                                                "email": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    }
                                },
                                "example": {
                                    "data": {
                                        "id": 1,
                                        "fullName": "John Doe",
                                        "email": "johndoe@example.com"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "example": {
                                    "message": "Unauthorized"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/register": {
            "post": {
                "description": "Create a new user",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "fullName",
                                    "email",
                                    "password",
                                    "passwordConfirmation",
                                    "deviceName"
                                ],
                                "properties": {
                                    "fullName": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    },
                                    "passwordConfirmation": {
                                        "type": "string"
                                    },
                                    "deviceName": {
                                        "type": "string"
                                    }
                                }
                            },
                            "example": {
                                "fullName": "John Doe",
                                "email": "johndoe@gmail.com",
                                "password": "john1234",
                                "passwordConfirmation": "john1234",
                                "deviceName": "Redmi 9"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "User successfully registered",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "token": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "example": {
                                    "token": "plain-text-token"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation errors",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "errors": {
                                            "type": "object",
                                            "additionalProperties": {
                                                "type": "array",
                                                "items": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    }
                                },
                                "example": {
                                    "message": "The given data was invalid",
                                    "errors": {
                                        "email": ["Email provider not valid"],
                                        "password": [
                                            "The password field is required",
                                            "The password must be at least 8 characters"
                                        ]
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
